[options]
        logfile = /var/log/knockd.log

[openSSH]
        sequence = 1212,1313,1414
        seq_timeout = 30
        tcpflags = syn
        Start_command = /sbin/iptables -I INPUT -s %IP% -p tcp -i eth1 --dport 22 -j ACCEPT

[closeSSH]
        sequence = 4141,3131,2121
        seq_timeout = 30
        command = /sbin/iptables -D INPUT -s %IP% -p tcp -i eth1 --dport 22 -j ACCEPT
        tcpflags = syn
